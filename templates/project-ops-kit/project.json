{
  "name": "{{PROJECT_NAME}}",
  "description": "{{PROJECT_DESCRIPTION}}",
  "version": "1.0.0",
  "repository": "{{GITHUB_URL}}",

  "stats": {
    "tests": 0,
    "uiTests": 0,
    "updated": "{{DATE}}"
  },

  "tech": {
    "platform": "macOS",
    "minVersion": "14.0",
    "framework": "SwiftUI",
    "language": "Swift",
    "xcode": "15.0+"
  },

  "thresholds": {
    "_comment": "Single source of truth for all quality thresholds",

    "coverage": {
      "minimum": 80,
      "target": 90,
      "ci": 80
    },

    "complexity": {
      "maxFunctionLines": 50,
      "maxFileLines": 500,
      "maxNestingDepth": 4,
      "maxParameters": 5,
      "maxCyclomaticComplexity": 16
    },

    "linting": {
      "fileLength": { "warning": 1200, "error": 2600 },
      "typeBodyLength": { "warning": 600, "error": 2200 },
      "functionBodyLength": { "warning": 120, "error": 700 },
      "lineLength": { "warning": 120, "error": 200 },
      "cyclomaticComplexity": { "warning": 16, "error": 40 }
    },

    "binary": {
      "maxSizeMB": 50,
      "baselineKB": 0,
      "alertOnIncreasePercent": 10
    },

    "pr": {
      "warnLinesChanged": 500,
      "blockLinesChanged": 1000
    },

    "issues": {
      "staleAfterDays": 60,
      "maxOpenIssues": 25
    }
  },

  "ci": {
    "mainBranch": "main",
    "runner": "macos-14",
    "workflows": {
      "main": ".github/workflows/ci.yml",
      "security": ".github/workflows/security.yml",
      "performance": ".github/workflows/performance.yml"
    },
    "jobs": ["Build & Test", "Complexity Check", "Binary Size", "Memory Safety"],
    "artifacts": {
      "testResults": "test-results",
      "coverage": "coverage-report",
      "binarySize": "binary-size",
      "complexity": "complexity-metrics"
    },
    "retentionDays": {
      "testResults": 14,
      "metrics": 90
    }
  },

  "dependencies": {
    "schedule": "weekly",
    "day": "monday",
    "ecosystems": ["github-actions", "swift"],
    "autoMerge": {
      "patch": true,
      "minor": true,
      "major": false
    }
  },

  "paths": {
    "source": "{{SOURCE_DIR}}/",
    "tests": "{{TEST_DIR}}/",
    "uiTests": "{{UI_TEST_DIR}}/",
    "docs": "docs/",
    "scripts": "scripts/",
    "team": ".claude-team/",
    "tasks": ".claude-team/tasks/",
    "outputs": ".claude-team/outputs/",
    "archive": ".claude-team/archive/",
    "metrics": ".claude-team/metrics/"
  },

  "configFiles": {
    "_comment": "Tool-specific configs that read from these thresholds",
    "swiftlint": ".swiftlint.yml",
    "dependabot": ".github/dependabot.yml",
    "preCommit": "scripts/pre-commit"
  },

  "scripts": {
    "build": "{{BUILD_COMMAND}}",
    "test": "{{TEST_COMMAND}}",
    "release": "./scripts/release.sh",
    "dashboard": "./scripts/dashboard.sh",
    "versionCheck": "./scripts/version-check.sh",
    "updateVersion": "./scripts/update-version.sh",
    "complexityCheck": "./scripts/complexity-check.sh",
    "techDebt": "./scripts/track-tech-debt.sh",
    "workerQA": "./scripts/worker-qa.sh"
  },

  "quality": {
    "testCoverage": "target: 80%",
    "ciPipeline": ".github/workflows/ci.yml",
    "preCommitHooks": true,
    "protectedBranch": true,
    "healthScoreTarget": 95
  },

  "team": {
    "workers": {
      "dev-1": { "role": "UI", "domain": "Views, ViewModels, Components" },
      "dev-2": { "role": "Engine", "domain": "Core business logic" },
      "dev-3": { "role": "Services", "domain": "Models, *Manager.swift" },
      "qa": { "role": "Testing", "domain": "{{TEST_DIR}}/" },
      "dev-ops": { "role": "Operations", "domain": "scripts/, docs/, .github/" }
    },
    "specialists": {
      "architect": { "role": "System Design", "domain": "Architecture decisions" },
      "ux-designer": { "role": "UX Analysis", "domain": "User flows, design review" },
      "security-auditor": { "role": "Security", "domain": "Vulnerability analysis" },
      "tech-writer": { "role": "Documentation", "domain": "User guides, API docs" }
    },
    "model": "opus"
  },

  "features": {
    "_comment": "Add project-specific features here"
  }
}
