{
  "name": "CloudSync Ultra",
  "description": "Professional macOS cloud synchronization with 42+ providers",
  "version": "2.0.34",
  "repository": "https://github.com/Andybod1/CloudSyncUltra",

  "stats": {
    "providers": 42,
    "oauthProviders": 23,
    "tests": 855,
    "uiTests": 69,
    "updated": "2026-01-16"
  },

  "tech": {
    "platform": "macOS",
    "minVersion": "14.0",
    "framework": "SwiftUI",
    "backend": "rclone",
    "language": "Swift"
  },

  "team": {
    "workers": {
      "dev-1": { "role": "UI", "domain": "Views, ViewModels, Components" },
      "dev-2": { "role": "Engine", "domain": "RcloneManager, TransferEngine" },
      "dev-3": { "role": "Services", "domain": "Models, *Manager.swift" },
      "qa": { "role": "Testing", "domain": "CloudSyncAppTests/" },
      "dev-ops": { "role": "Operations", "domain": "scripts/, docs/, .github/" }
    },
    "specialists": {
      "architect": { "role": "System Design", "domain": "Architecture decisions" },
      "ux-designer": { "role": "UX Analysis", "domain": "User flows, design review" },
      "security-auditor": { "role": "Security", "domain": "Vulnerability analysis" },
      "tech-writer": { "role": "Documentation", "domain": "User guides, API docs" }
    },
    "model": "opus"
  },

  "paths": {
    "source": "CloudSyncApp/",
    "tests": "CloudSyncAppTests/",
    "uiTests": "CloudSyncAppUITests/",
    "docs": "docs/",
    "scripts": "scripts/",
    "team": ".claude-team/",
    "tasks": ".claude-team/tasks/",
    "outputs": ".claude-team/outputs/",
    "archive": ".claude-team/archive/"
  },

  "scripts": {
    "build": "xcodebuild build -project CloudSyncApp.xcodeproj -scheme CloudSyncApp",
    "test": "xcodebuild test -project CloudSyncApp.xcodeproj -scheme CloudSyncApp -destination 'platform=macOS'",
    "release": "./scripts/release.sh",
    "dashboard": "./scripts/dashboard.sh",
    "versionCheck": "./scripts/version-check.sh",
    "updateVersion": "./scripts/update-version.sh"
  },

  "quality": {
    "testCoverage": "target: 80%",
    "ciPipeline": ".github/workflows/ci.yml",
    "preCommitHooks": true,
    "protectedBranch": true,
    "healthScore": 90
  },

  "features": {
    "wizards": ["ProviderConnection", "Schedule", "Transfer"],
    "encryption": "E2E available to all users",
    "onboarding": "Interactive with wizard integration",
    "feedback": "In-app via GitHub issues"
  }
}
